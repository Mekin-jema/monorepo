# Global environment used by Turborepo (see turbo.json)

# Node
NODE_ENV=development

# ---------------------- DATABASES ----------------------
# Postgres (auth) — matches docker-compose.yml
DATABASE_URL_POSTGRES=postgresql://postgres_user:postgres_pass@localhost:5432/authdb?schema=public

# MongoDB (auth) — replicaset with admin auth
# Note: replicaSet=rs0 and authSource=admin must match docker-compose
DATABASE_URL_MONGO=mongodb://mongo_user:mongo_pass@localhost:27017/mongotest?authSource=admin&replicaSet=rs0

# Optional SQLite (local dev/testing)
DATABASE_URL_SQLITE=file:./dev.db

# Generic Prisma DATABASE_URL (if needed by tools)
# Use Postgres or Mongo depending on target. Some scripts read DATABASE_URL.
DATABASE_URL=${DATABASE_URL_POSTGRES}

# ---------------------- AUTH ----------------------
BETTER_AUTH_SECRET=changeme-super-secret
BETTER_AUTH_URL=http://localhost:3000

# ---------------------- APPS/URLS ----------------------
NEXT_PUBLIC_BASE_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3002
APP1_URL=http://localhost:3000
APP2_URL=http://localhost:3001

