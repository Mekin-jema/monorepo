{
  "name": "@repo/db",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": "./src/index.ts",
    "./product": {
      "types": "./dist/auth-db.d.ts",
      "default": "./dist/auth-db.js"
    },
    "./auth": {
      "types": "./dist/postgres-db.d.ts",
      "default": "./dist/postgres-db.js"
    },
    "./order": {
      "types": "./dist/order-db.d.ts",
      "default": "./dist/order-db.js"
    }
  },
  "scripts": {
    "lint": "next lint",
    "check-types": "tsc --noEmit",
    "postinstall": "pnpm generate",
    
    "generate:auth": "npx prisma generate --schema ./prisma/auth/auth.prisma ",
    "generate:product": "npx prisma generate --schema ./prisma/product/product.prisma",
    "generate:order": "npx prisma generate --schema ./prisma/order/order.prisma ",
    "generate": "pnpm generate:auth && pnpm generate:product && pnpm generate:order",
    "migrate:auth": "npx prisma migrate dev --schema ./prisma/auth/auth.prisma  ",
    "migrate:order": "npx prisma migrate dev --schema ./prisma/order/order.prisma",
    "migrate": "pnpm migrate:auth  && pnpm migrate:order",
   
    "deploy:auth": "npx prisma migrate deploy --schema ./prisma/auth/auth.prisma",
    "deploy:product": "npx prisma migrate deploy --schema ./prisma/product/product.prisma",
    "deploy:order": "npx prisma migrate deploy --schema ./prisma/order/order.prisma",
    "deploy": "pnpm deploy:auth && pnpm deploy:product && pnpm deploy:order",
    
    "studio:auth": "npx prisma studio --schema ./prisma/auth/auth.prisma --port 5554",
    "studio:product": "npx prisma studio --schema ./prisma/product/product.prisma --port 5556",
    "studio:order": "npx prisma studio --schema ./prisma/order/order.prisma --port 5557",
    "studio": "pnpm studio:auth & pnpm studio:product & pnpm studio:order",
    
    "seeds:order": "pnpm dlx tsx  ./prisma/seeds/orderSeed.ts",
    "seeds:product": "pnpm dlx tsx  ./prisma/seeds/productSeed.ts",
    "seeds:auth": "pnpm dlx tsx  ./prisma/seeds/authSeed.ts",
    "seedsall": "node  prisma/seeds/runAllSeeds.mjs"
  },
  "dependencies": {
    "@prisma/client": "latest",
    "@repo/typescript-config": "workspace:*",
    "dotenv": "^17.2.3"
  },
  "devDependencies": {
    "@types/node": "^24.6.2",
    "prisma": "latest",
    "typescript": "latest"
  }
}
