{
  "name": "@repo/db",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "exports": {
     ".": "./src/index.ts",
    "./mongo": {
      "types": "./dist/auth-db.d.ts",
      "default": "./dist/auth-db.js"
    },
    "./postgres-db": {
      "types": "./dist/postgres-db.d.ts",
      "default": "./dist/postgres-db.js"
    },
    "./sqlite-db": {
      "types": "./dist/sqlite-db.d.ts",
      "default": "./dist/sqlite-db.js"
    }
  },


"scripts": {

  "lint": "next lint",
  "check-types": "tsc --noEmit",


  "postinstall": "pnpm generate",

  "generate:auth": "npx prisma generate --schema ./prisma/auth/authdb.prisma ",
  "generate:postgres": "npx prisma generate --schema ./prisma/mongo/mongo.prisma",
  "generate:sqlite": "npx prisma generate --schema ./prisma/sqlite/sqlite.prisma ",
  "generate": "pnpm generate:auth && pnpm generate:postgres && pnpm generate:sqlite",

  "migrate:auth": "npx prisma migrate dev --schema ./prisma/auth/authdb.prisma",
  "migrate:sqlite": "npx prisma migrate dev --schema ./prisma/sqlite/sqlite.prisma",
  "migrate": "pnpm migrate:auth  && pnpm migrate:sqlite",

  "deploy:auth": "npx prisma migrate deploy --schema ./prisma/auth/authdb.prisma",
  "deploy:postgres": "npx prisma migrate deploy --schema ./prisma/mongo/mongo.prisma",
  "deploy:sqlite": "npx prisma migrate deploy --schema ./prisma/sqlite/sqlite.prisma",
  "deploy": "pnpm deploy:auth && pnpm deploy:postgres && pnpm deploy:sqlite",

  "studio:auth": "npx prisma studio --schema ./prisma/auth/authdb.prisma --port 5554",
  "studio:postgres": "npx prisma studio --schema ./prisma/mongo/mongo.prisma --port 5556",
  "studio:sqlite": "npx prisma studio --schema ./prisma/sqlite/sqlite.prisma --port 5557",
  "studio": "pnpm studio:auth & pnpm studio:postgres & pnpm studio:sqlite"
,
  "seeds:sqlite": "pnpm dlx tsx ./prisma/seeds/sqliteSeed.ts",
  "seeds:mongo": "pnpm dlx tsx ./prisma/seeds/mongoSeed.ts",
  "seeds:postgres": "pnpm dlx tsx ./prisma/seeds/postgresSeed.ts",
  "seeds:all": "node ./prisma/seeds/runAllSeeds.mjs"
},

  "dependencies": {
    "@prisma/client": "latest",
    "@repo/typescript-config": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^24.6.2",
    "prisma": "latest",
    "typescript": "latest"
  }
}
