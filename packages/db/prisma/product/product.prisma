generator Client {
  provider = "prisma-client-js"
  output   = "../../generated/product"
}

datasource db {
  provider = "mongodb"
  url      = "mongodb://admin:password@localhost:27017/db?authSource=admin"

}


model Product {
  id              String   @id @map("_id") @default(cuid())
  name             String
  shortDescription String
  description      String
  price            Int
  sizes            String
  colors           Json
  images           Json
  createdAt        DateTime @default(now()) 
  updatedAt        DateTime @updatedAt
  categorySlug     String
  category         Category @relation(fields: [categorySlug], references: [slug])
}

model Category {
  id       String   @id @map("_id") @default(cuid() )
  name     String
  slug     String    @unique
  products Product[]
}